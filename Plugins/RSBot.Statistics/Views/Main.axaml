<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RSBot.Statistics.ViewModels"
             mc:Ignorable="d" d:DesignWidth="952" d:DesignHeight="632"
             x:Class="RSBot.Statistics.Views.Main"
             x:DataType="vm:MainViewModel">

    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="318"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <StackPanel Grid.Column="0" Margin="12">
            <!-- Live Filters -->
            <Border Classes="GroupBox" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Live Filters" Classes="h2" Margin="0,0,0,8"/>
                    <ItemsControl ItemsSource="{Binding LiveFilters}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:StatisticFilterViewModel">
                                <CheckBox Content="{Binding Label}" 
                                         IsChecked="{Binding IsChecked}"
                                         Margin="0,4"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Static Filters -->
            <Border Classes="GroupBox">
                <StackPanel>
                    <TextBlock Text="Static Filters" Classes="h2" Margin="0,0,0,8"/>
                    <ItemsControl ItemsSource="{Binding StaticFilters}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:StatisticFilterViewModel">
                                <CheckBox Content="{Binding Label}" 
                                         IsChecked="{Binding IsChecked}"
                                         Margin="0,4"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Right Panel -->
        <DockPanel Grid.Column="1" Margin="12">
            <Button DockPanel.Dock="Top" 
                    Content="Reset All" 
                    Command="{Binding ResetCommand}"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,12"/>

            <ListBox ItemsSource="{Binding Statistics}"
                     Background="Transparent"
                     BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="vm:StatisticItemViewModel">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Label}" Grid.Column="0"/>
                            <TextBlock Text="{Binding Value}" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Reset Selected"
                                  Command="{Binding ResetSelectedCommand}"
                                  CommandParameter="{Binding $parent[ListBoxItem].DataContext}"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
        </DockPanel>
    </Grid>

    <UserControl.Styles>
        <Style Selector="Border.GroupBox">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemBaseMediumLowColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </UserControl.Styles>
</UserControl> 