<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RSBot.CommandCenter.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="50"
             x:Class="RSBot.CommandCenter.Avalonia.Views.Controls.EmoticonActionElement">

    <Design.DataContext>
        <vm:EmoticonActionElementViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="Auto,*,*">
        <Image Grid.Column="0" 
               Source="{Binding IconImage}" 
               Width="32" Height="32" 
               Margin="5,0,10,0" />

        <TextBlock Grid.Column="1" 
                  Text="{Binding Name}" 
                  VerticalAlignment="Center" />

        <ComboBox Grid.Column="2" 
                  ItemsSource="{Binding Actions}"
                  SelectedItem="{Binding SelectedAction}"
				  DisplayMemberBinding="{Binding ActionDescription}"
                  Margin="5,0,5,0"
                  HorizontalAlignment="Stretch" />
    </Grid>

</UserControl> 