<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:RSBot.General.ViewModels"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="RSBot.General.Views.PendingWindow"
        x:DataType="vm:PendingWindowViewModel"
        Title="Pending"
        Width="300" Height="200"
		
        Background="rgba(0, 0, 0, 0.9)"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaTitleBarHeightHint="-1">

    <Design.DataContext>
        <vm:PendingWindowViewModel/>
    </Design.DataContext>

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Name="labelServerName" Text="{Binding ServerName}" Margin="0,0,0,10"/>
            
            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Position:" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Name="labelPending" Text="{Binding Position}" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Average waiting time:" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Name="labelAvgWaitingTime" Text="{Binding AverageWaitingTime}" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="My waiting time:" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Name="labelMyWaitingTime" Text="{Binding MyWaitingTime}" Margin="0,0,0,5"/>
            </Grid>
        </StackPanel>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
            <Button Content="Cancel" Command="{Binding CancelCommand}" MinWidth="80"/>
            <Button Content="Hide" Command="{Binding HideCommand}" MinWidth="80"/>
        </StackPanel>
    </DockPanel>

    <Window.Styles>
        <Style Selector="Border.GroupBox">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemBaseMediumLowColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style Selector="Button.accent">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>
</Window> 