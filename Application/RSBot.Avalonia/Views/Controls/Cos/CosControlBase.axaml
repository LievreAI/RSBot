<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cos="using:RSBot.Views.Controls.Cos"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="150"
             x:Class="RSBot.Views.Controls.Cos.CosControlBase"
			 xmlns:vm="using:RSBot.ViewModels.Cos"
			 x:DataType="vm:CosControlBaseViewModel">

	<Design.DataContext>
		<vm:CosControlBaseViewModel/>
	</Design.DataContext>

	<Border Padding="5" Background="Transparent">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<DockPanel Grid.Row="0" Margin="0,10,0,0">
				<TextBlock Text="{Binding Level}"
						 DockPanel.Dock="Right"/>
				<TextBlock Text="{Binding PetName}"
						 DockPanel.Dock="Left"/>
			</DockPanel>

			<DockPanel Grid.Row="1" Margin="0,5,0,0">
				<TextBlock Text="HP:"
						 DockPanel.Dock="Left"
						 VerticalAlignment="Center"/>
				<Grid DockPanel.Dock="Right">
					<ProgressBar Margin="5,0,0,0"
							 Height="20"
							 Minimum="0"
							 Maximum="{Binding HealthMaximum}"
							 Value="{Binding Health}"
							 Foreground="Firebrick"/>

					<TextBlock HorizontalAlignment="Center" 
							 VerticalAlignment="Center" 
							 Foreground="White">
						<TextBlock.Text>
							<MultiBinding StringFormat="{}{0} / {1}">
								<Binding Path="Health"/>
								<Binding Path="HealthMaximum"/>
							</MultiBinding>
						</TextBlock.Text>
					</TextBlock>
				</Grid>
			</DockPanel>
		</Grid>
	</Border>
</UserControl>
