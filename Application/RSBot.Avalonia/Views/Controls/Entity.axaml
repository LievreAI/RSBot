<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RSBot.ViewModels"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="150"
             x:Class="RSBot.Views.Controls.Entity"
             x:DataType="vm:EntityViewModel">

	<Design.DataContext>
		<vm:EntityViewModel/>
	</Design.DataContext>

	<Border Padding="5" Background="Transparent">
		<StackPanel>
			<TextBlock Text="{Binding EntityName}" FontWeight="Bold" Margin="0 0 0 5"/>
			<TextBlock Text="{Binding Type}" Foreground="Yellow" Margin="0 0 0 5"/>
			<ProgressBar Height="20"
						 Minimum="0"
						 Maximum="{Binding HealthMaximum}"
						 Value="{Binding Health}"
						 Foreground="DarkRed"
						 ShowProgressText="True"
						 Margin="0 0 0 5"/>
		</StackPanel>
	</Border>
</UserControl>
