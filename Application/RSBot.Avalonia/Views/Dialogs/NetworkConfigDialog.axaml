<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:RSBot.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="RSBot.Views.Dialogs.NetworkConfigDialog"
        Title="Network Configuration"
        Width="400" Height="200"
        WindowStartupLocation="CenterOwner"
        Background="rgba(255, 255, 255, 0.07)"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaToDecorationsHint="True"
        x:DataType="vm:NetworkConfigDialogViewModel">

    <Design.DataContext>
        <vm:NetworkConfigDialogViewModel/>
    </Design.DataContext>

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Use your custom interface IP for connect to game."/>
        <TextBlock Text="Enter your interface IP: (default: 0.0.0.0)"/>
        
        <TextBox Text="{Binding BindIp}"/>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10" 
                    Margin="0,20,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window> 