<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:RSBot.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="RSBot.Views.Dialogs.AboutDialog"
        Title="About RSBot"
        Width="400" Height="300"
        WindowStartupLocation="CenterOwner"
        Background="rgba(255, 255, 255, 0.04)"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaToDecorationsHint="True"
        x:DataType="vm:AboutDialogViewModel">

    <Design.DataContext>
        <vm:AboutDialogViewModel/>
    </Design.DataContext>

    <StackPanel Margin="20" Spacing="20">
        <Image Source="/Assets/app.png" 
               Width="64" Height="64" 
               HorizontalAlignment="Center"/>

        <StackPanel HorizontalAlignment="Center" Spacing="5">
            <TextBlock Text="RSBot" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Version}" 
                       FontSize="12" 
                       Foreground="Gray" 
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <TextBlock Text="A bot application for Silkroad Online" 
                   TextWrapping="Wrap" 
                   TextAlignment="Center"/>

        <StackPanel HorizontalAlignment="Center" Spacing="5">
            <TextBlock Text="Created by" 
                       FontSize="12" 
                       Foreground="Gray"/>
            <TextBlock Text="RSBot Team" 
                       FontWeight="Bold"/>
        </StackPanel>

        <Button Content="Close" 
                HorizontalAlignment="Center" 
                Command="{Binding CloseCommand}"/>
    </StackPanel>
</Window> 